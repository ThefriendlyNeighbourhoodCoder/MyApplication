<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stars"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Register">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login"
        android:transitionName="logo_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:shadowColor="#A6A6A6"
        android:shadowDx="-5"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:text="Welcome!"
        android:fontFamily="@font/alegreya_sans_sc_medium"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:shadowColor="#A6A6A6"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Sign Up to Explore the Journey of\nA Half Developer and a half Artist"
        android:textAlignment="textStart"
        android:fontFamily="@font/alegreya_sans_sc_medium"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:autoSizeTextType="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp">


        <EditText
            android:id="@+id/fullname"
            android:background="@drawable/edit"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="5dp"
            android:elevation="20dp"
            android:paddingStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/email"
            android:background="@drawable/edit"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="5dp"
            android:elevation="8dp"
            android:paddingStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password"
            android:background="@drawable/edit"
            android:drawableStart="@drawable/ic_baseline_key_24"
            android:drawablePadding="5dp"
            android:elevation="20dp"
            android:paddingStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Create Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/phone"
            android:background="@drawable/edit"
            android:drawableStart="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="5dp"
            android:elevation="20dp"
            android:paddingStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Phone"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/registerBtn"
            android:background="@drawable/custom_button"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="Start the Journey !"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            app:backgroundTint="#193EE8"
            />

        <TextView
            android:id="@+id/createText"
            android:background="@drawable/hollow"
            android:elevation="20dp"
            android:paddingStart="8dp"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:shadowColor="#A6A6A6"
            android:text="Already have an account?\n Log In"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:progressTint="#fff"
        android:visibility="invisible" />

</LinearLayout>